{
  "manifest_version": 3,
  "name": "NeuraTube â€“ AI Video Summarizer",
  "version": "1.3",
  "description": "Instant AI summaries, key takeaways, and insights for YouTube videos.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
